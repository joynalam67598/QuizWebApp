@using Microsoft.AspNetCore.Identity 
@inject SignInManager<ApplicationUser> SignInManager  

<ul class="navbar-nav">
  @if (SignInManager.IsSignedIn(User))  
  {  
      <li class="nav-item">  
          <a  class="nav-link text-dark" asp-area="" asp-page="" title="Manage">@(User.FindFirst("UserFirstName").Value + " " + User.FindFirst("UserLastName").Value)</a>  
     </li>  
    <li class="nav-item">  
       <form  class="form-inline" asp-controller="Account"  asp-action="SignOut" >  
           <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>  
        </form> 
    </li> 
 } 
 else 
 { 

<li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Account" asp-action="SignUp" >Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Account" asp-action="SignIn" asp-route-returnUrl="@Context.Request.Path">Login</a>
    </li>
  }  
</ul>
